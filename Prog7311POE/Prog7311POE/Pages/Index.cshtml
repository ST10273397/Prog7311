@page
@model IndexModel
@{
    ViewData["Title"] = "Login";
}

<div class="text-center">
    <h1 class="display-4">Welcome!</h1>
    <h1 class="display-4">Please Login</h1>


    <form method = "post" class="w-25 mx-auto text-start mt-4">
        <div asp-asp-validation-summary="All" class="text-danger"></div>

        <div class="mb-3">
            <label class="form-label">Email:</label>
            <input asp-for = "Email" class="form-control"/>
            <span asp-validation-formaction="Email" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label class="form-label">Password:</label>
            <input asp-for = "Password" type="password" class="form-control"/>
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <button type = "submit" class="btn btn-success w-100">Login</button>

        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <p style="color:red">@Model.ErrorMessage</p>
        }
    </form>
</div>

@section Scripts{
    <partial name ="_ValidationScriptsPartial" />
}